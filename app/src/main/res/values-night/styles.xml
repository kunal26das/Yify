<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="isLightTheme">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor">@color/colorDarkMode</item>
        <item name="android:navigationBarColor">@color/colorDarkMode</item>
        <item name="android:windowBackground">@color/colorDarkMode</item>
        <item name="colorPrimary">@color/colorDarkMode</item>
        <item name="colorPrimaryDark">@color/colorDarkMode</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:background">#2e2f33</item>
        <item name="android:backgroundTint">#2e2f33</item>
        <item name="android:fontFamily">@font/product_sans_medium</item>
    </style>

</resources>
